<section class="cart-section" style="padding: 4rem 1rem; max-width: 800px; margin: 0 auto;">
  <h1 style="font-size: 2rem; margin-bottom: 2rem;">Shopping Cart</h1>

  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post">
      {% for item in cart.items %}
        <div class="cart-item" style="display: flex; gap: 1rem; padding: 1rem 0; border-bottom: 1px solid #eee;">
          {% if item.image %}
            <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title }}" style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px;">
          {% endif %}
          <div style="flex: 1;">
            <h3 style="margin: 0 0 0.5rem;">{{ item.product.title }}</h3>
            <p style="color: var(--color-primary);">{{ item.price | money }}</p>
            <p>Qty: {{ item.quantity }}</p>
          </div>
          <a href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity=0" style="color: #999;">Remove</a>
        </div>
      {% endfor %}

      <div style="margin-top: 2rem; text-align: right;">
        <p style="font-size: 1.25rem; margin-bottom: 1rem;">Subtotal: {{ cart.total_price | money }}</p>
        <a href="{{ routes.checkout_url }}" style="display: inline-block; background: var(--color-primary); color: #fff; padding: 1rem 2rem; text-decoration: none; border-radius: 4px;">
          Checkout
        </a>
      </div>
    </form>
  {% else %}
    <p>Your cart is empty.</p>
    <a href="{{ routes.all_products_collection_url }}" style="color: var(--color-primary);">Continue Shopping</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
