<section class="collection-section" style="padding: 4rem 1rem; max-width: 1200px; margin: 0 auto;">
  <h1 style="font-size: 2rem; text-align: center; margin-bottom: 2rem;">{{ collection.title }}</h1>

  <div class="product-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 2rem;">
    {% for product in collection.products %}
      <div class="product-card" style="background: #fff; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <a href="{{ product.url }}">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" style="width: 100%; height: 280px; object-fit: cover;">
          {% endif %}
        </a>
        <div style="padding: 1rem;">
          <h3 style="font-size: 1rem; margin-bottom: 0.5rem;">
            <a href="{{ product.url }}" style="color: var(--color-text); text-decoration: none;">{{ product.title }}</a>
          </h3>
          <p style="color: var(--color-primary); font-weight: 600;">{{ product.price | money }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection",
  "settings": []
}
{% endschema %}
